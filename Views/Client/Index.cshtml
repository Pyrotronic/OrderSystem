
@model IEnumerable<OrderSystem.Models.Client>


<h2>Список клиентов</h2>

<tr>
    <th>
        <a asp-action="Create">
            <button type="submit" class=" btn btn-primary">Добавить пользователя</button>
        </a>
    </th>
    <th>
        <a asp-action="Delete">
            <button type="submit" class=" btn btn-primary">Удалить пользователя</button>
        </a>
    </th>
    <th>

    </th>
</tr>
<table class="table">
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortState="@ViewBag.id_ClientSort">
                Id
            </a>
        </th>
        <th>
            <a asp-action ="Index" asp-route-sortState="@ViewBag.SurnameSort">
                Фамилия
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortState="@ViewBag.NameSort">
                Имя
            </a>
        </th>
        <th>
            Телефон
        </th>
        <th>
            <a asp-action="Index" asp-route-sortState="@ViewBag.AddressSort">
                Адрес
            </a>
        </th>
        <th>
            Bank
        </th>
        <th>
            Card_number
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id_Client</td>
            <td>@item.Surname</td>
            <td>@item.Name</td>
            <td>@item.phone</td>
            <td>@item.Address</td>
            <td>@item.bank</td>
            <td>@item.card_number</td>
            <td>
                <a asp-action="Edit" asp-controller="client" asp-route-id ="@item.id_Client">
                    <button type="submit" class="btn btn-outline-primary">Изменить</button>
                </a>
            </td>
        </tr>
    }
</table>